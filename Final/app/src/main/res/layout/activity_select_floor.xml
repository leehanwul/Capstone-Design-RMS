<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jinwoo.afinal.SelectFloorActivity"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/floor_1"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="49dp"
            android:drawableEnd="@drawable/floor1"
            android:onClick="goPaldarF1"
            android:text="1층"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="360dp" />

        <Button
            android:id="@+id/floor_3"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_above="@+id/floor_2"
            android:layout_alignLeft="@+id/floor_2"
            android:layout_alignStart="@+id/floor_2"
            android:layout_marginBottom="30dp"
            android:drawableEnd="@drawable/floor3"
            android:text="3층"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="162dp" />

        <Button
            android:id="@+id/floor_4"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_above="@+id/floor_3"
            android:layout_alignLeft="@+id/floor_3"
            android:layout_alignStart="@+id/floor_3"
            android:layout_marginBottom="30dp"
            android:drawableEnd="@drawable/floor4"
            android:text="4층"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="60dp" />

        <Button
            android:id="@+id/floor_2"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_above="@+id/floor_1"
            android:layout_alignLeft="@+id/floor_1"
            android:layout_alignStart="@+id/floor_1"
            android:layout_marginBottom="30dp"
            android:drawableEnd="@drawable/floor2"
            android:text="2층"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="266dp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
